{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/railway/cron/Dockerfile",
    "watchPatterns": ["packages/crons/**", "packages/build/**","packages/scripts/**", "src/db/**","packages/railway/cron/**"]
  },
  "deploy": {
    "startCommand": null,
    "cronSchedule": "*/15 * * * *",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}

