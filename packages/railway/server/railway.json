{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/railway/server/Dockerfile",
    "watchPatterns": ["src/**", "packages/scripts/**", "packages/railway/server/**", "*.ts"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "overlapSeconds": 60,
    "drainingSeconds": 10
  }
}
