{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/railway-server/Dockerfile",
    "watchPatterns": ["src/**", "packages/**"]
  },
  "deploy": {
    "startCommand": "bun run .output/server/index.mjs",
    "preDeployCommand": ["bun run db:migrate"],
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "overlapSeconds": 60,
    "drainingSeconds": 10
  }
}

